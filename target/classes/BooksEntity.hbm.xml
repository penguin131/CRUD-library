<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="myApp.model.BooksEntity" table="Books" schema="DB_BOOKS">
        <id name="bookId">
            <column name="bookId" sql-type="int(10)"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(255)"/>
        </property>
        <property name="year">
            <column name="year" sql-type="int(10)"/>
        </property>
        <property name="cost">
            <column name="cost" sql-type="decimal(15,2)"/>
        </property>
        <many-to-one name="Author" class="myApp.model.AuthorsEntity"
                     column="Author" not-null="true"/>
        <many-to-one name="Publishing" class="myApp.model.PublishingEntity"
                     column="Publishing" not-null="true"/>
    </class>
</hibernate-mapping>
